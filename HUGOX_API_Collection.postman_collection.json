        {
          "name": "Get Products by Category",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/categories/{{categoryId}}/products"
          }
        }
      ]
    },
    {
      "name": "üì∞ News",
      "item": [
        {
          "name": "Get All News",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/news?page=1&limit=12&category=Technology&search=news"
          }
        },
        {
          "name": "Get News by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/news/{{newsId}}"
          }
        },
        {
          "name": "Get News Categories",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/news/categories"
          }
        },
        {
          "name": "Get Featured News",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/news/featured"
          }
        }
      ]
    },
    {
      "name": "‚≠ê Reviews",
      "item": [
        {
          "name": "Get All Reviews",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reviews?page=1&limit=12&product={{productId}}"
          }
        },
        {
          "name": "Get Review by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reviews/{{reviewId}}"
          }
        },
        {
          "name": "Get Product Reviews",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reviews/product/{{productId}}"
          }
        },
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}, {"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product\": \"{{productId}}\",\n  \"rating\": 5,\n  \"comment\": \"Great product!\"\n}"
            },
            "url": "{{baseUrl}}/reviews"
          }
        },
        {
          "name": "Like Review",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/reviews/{{reviewId}}/like"
          }
        },
        {
          "name": "Dislike Review",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/reviews/{{reviewId}}/dislike"
          }
        }
      ]
    },
