            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"0123456789\",\n  \"subject\": \"Inquiry\",\n  \"message\": \"Hello, I have a question about your products.\"\n}"
            },
            "url": "{{baseUrl}}/contact"
